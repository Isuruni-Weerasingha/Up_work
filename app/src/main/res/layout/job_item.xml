<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_blue"> <!-- Make sure light_blue is defined in colors.xml -->

    <ImageView
        android:id="@+id/job_icon"
        android:layout_width="288dp"
        android:layout_height="187dp"
        android:layout_gravity="center"
        android:contentDescription="Job Icon"
        android:src="@drawable/jobfree" /> <!-- Ensure jobfree exists in drawable folder -->



    <!-- First Job Listing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/job_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAN-POWER"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_location_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Pita Kotte"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/job_type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part-Time"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/job_salary_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2,000 LKR/Day"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Details:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_details_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manpower jobs include lifting, loading, construction, and factory work, requiring physical strength and stamina."
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/requirements_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Requirements:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_requirements_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Experience"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/apply_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/black"
            android:text="Apply Now"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Second Job Listing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/job_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pvt Ltd."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_location_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Athul Kotte"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/job_type_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part-time"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/job_salary_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3,000 LKR/Day + Food"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Details:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_details_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Involves handling payments, assisting customers, operating registers, and maintaining accurate transaction records."
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/requirements_label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Requirements:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_requirements_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic math skills, Customer Service Skills"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/apply_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/black"
            android:text="Apply Now"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/editPlusButton"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Add"
        android:src="@drawable/plus1"
        android:onClick="onAddClick"/>




</LinearLayout>
