<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="1dp">

        <!-- Feedback Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/apple"
                android:contentDescription="Feedback Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Feedback"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Feedback Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:elevation="4dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="We value your feedback"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Your Name"
                android:padding="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:hint="Your Feedback"
                android:padding="10dp" />

            <!-- Rating -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rate Us"
                android:textStyle="bold"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:isIndicator="false"
                android:theme="@style/Widget.AppCompat.RatingBar.Small"/>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF7043"
                    android:text="Submit"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FF7043"
                    android:text="Clear"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

        <!-- Footer -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="18dp"
                app:srcCompat="@drawable/jobfree"
                android:contentDescription="Logo Image"/>

            <!-- PartTimePro Header -->
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/malik"
                android:layout_marginTop="6dp"
                android:text="PartTimePro"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work when you want, Where you want."
                android:textSize="12sp"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="90dp" />
        </RelativeLayout>

        <!-- Social Media Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:paddingBottom="6dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/homee"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onHomeClick"
                    android:contentDescription="Home"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/facebook"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onFacebookClick"
                    android:contentDescription="Facebook"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/twitter"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onTwitterClick"
                    android:contentDescription="Twitter"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/insta"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onInstagramClick"
                    android:contentDescription="Instagram"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/linkedin"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onLinkedInClick"
                    android:contentDescription="LinkedIn"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
