<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E9F2F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📧 Email: support@upwork.com"
            android:textSize="16sp"
            android:textColor="#0000FF"
            android:clickable="true"
            android:id="@+id/txtEmail"
            android:layout_marginBottom="8dp" />

        <!-- WhatsApp -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💬 WhatsApp: +1234567890"
            android:textSize="16sp"
            android:textColor="#209D49"
            android:clickable="true"
            android:id="@+id/txtWhatsApp"
            android:layout_marginBottom="8dp" />

        <!-- Hotline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☎ Hotline: +1122334455"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:clickable="true"
            android:id="@+id/txtHotline"
            android:layout_marginBottom="8dp" />

        <!-- Facebook -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔗 Facebook:https://www.facebook.com/UpWork"
            android:textSize="16sp"
            android:textColor="#1877F2"
            android:clickable="true"
            android:id="@+id/txtFacebook"
            android:layout_marginBottom="8dp" />

        <!-- Address -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Address:No.9/99,Hewagama,Kaduwela"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Contact Form -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:gravity="top"
            android:hint="Your Message"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF6200EE"
            android:padding="12dp"
            android:text="Send Message"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
