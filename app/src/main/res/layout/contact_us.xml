<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E9F2F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backbtn"
                android:background="@android:color/transparent"
                android:contentDescription="back"
                android:onClick="onBackClick" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="📧 Email: nethmidilunika321@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:clickable="true"
            android:layout_marginBottom="0dp"
            android:padding="12dp"
            android:layout_marginTop="2dp"
            android:focusable="true"
            android:minHeight="48dp" />  <!-- Minimum height to ensure touch target size -->
        <!-- Added padding to increase touch target size -->


        <!-- WhatsApp -->
        <TextView
            android:id="@+id/txtWhatsApp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="💬 WhatsApp: +1234567890"
            android:textSize="16sp"
            android:textColor="#209D49"
            android:clickable="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="2dp"
            android:padding="12dp"
            android:focusable="true"
            android:minHeight="48dp" />  <!-- Added minimum height to ensure touch target size -->




        <!-- Hotline -->
        <TextView
            android:id="@+id/txtHotline"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="☎ Hotline: +1122334455"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:clickable="true"
            android:layout_marginBottom="0dp"
            android:padding="12dp"
            android:focusable="true"
            android:minHeight="48dp" />  <!-- Added minimum height to ensure touch target size -->


        <!-- Facebook -->
        <TextView
            android:id="@+id/txtFacebook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="🔗 Facebook: https://www.facebook.com"
            android:textSize="16sp"
            android:textColor="#1877F2"
            android:clickable="true"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:focusable="true" />



        <!-- Address -->

        <!-- Contact Form -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="📍 Address:No.9/99,Hewagama,Kaduwela"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:minHeight="48dp" />  <!-- Added minHeight to ensure touch target size -->


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginBottom="10dp" />


        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:gravity="top"
            android:hint="Your Message"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#516B92"
            android:padding="12dp"
            android:text="Send Message"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
